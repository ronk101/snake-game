<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.nsu.skopintsev.game.view.StartMenuController"
      spacing="10"
      alignment="CENTER">

   <Label text="Enter your nickname:"/>
   <TextField fx:id="nicknameInput" promptText="Your nickname"/>

   <HBox spacing="10">
      <Button text="Create Room" onAction="#createRoom"/>
      <Button text="Join Room" onAction="#joinRoom"/>
   </HBox>

   <Label text="Available Rooms:"/>
   <ListView fx:id="roomsList" prefHeight="100"/>

</VBox>
